<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

<EditText
    android:inputType="textEmailAddress"
    android:paddingStart="10dp"
    android:drawableStart="@drawable/email_24"
    android:id="@+id/emile_text"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/borderfile"
    android:layout_marginTop="150dp"/>

    <EditText
        android:inputType="text"
        android:drawableStart="@drawable/notes_24"
        android:paddingStart="10dp"
       app:layout_constraintTop_toBottomOf="@id/emile_text"
        android:id="@+id/name_part"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/borderfile"
       android:layout_marginTop="15dp"/>
    <EditText
        android:inputType="text"
        android:drawableStart="@drawable/sms_24"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_part"
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        android:background="@drawable/bordertexte"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/btn_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="send"
        android:textSize="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>